<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:scrollbars="vertical"
	android:background="@drawable/backgroundboarder">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/backgroundboarder"
    android:id="@+id/ModifySetupInfoLayout"
    android:scrollbars="vertical">


	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/app_bar_inptdata"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar_modsetup_info"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:layout_scrollFlags="scroll|enterAlways"
			app:popupTheme="@style/AppTheme" />
	</com.google.android.material.appbar.AppBarLayout>

   <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="51dp"
         android:weightSum="5"
         android:layout_marginTop="10dp">
 <TextView              
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_gravity="left"
	             
	              android:layout_marginLeft="40dp"
	              android:layout_marginTop="8dp"
	              android:text="SDO Code    :"
	              android:textSize="18dp"
	              android:textStyle="bold"
	              android:textColor="#ffffff" />
		
		<TextView
		    android:id="@+id/txtVwSdoCd"  
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_gravity="right"
		    android:layout_marginLeft="24dp"		   
		    android:textSize="18dp"
	        android:textColor="#ffff66"  />
       
       
	</LinearLayout>
	
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:weightSum="5" >
		<TextView
	             android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_gravity="left"
	              android:layout_marginLeft="40dp"
	              android:layout_marginTop="8dp"
	              android:paddingLeft="4dp"
	              android:text="MRU list   :"
	               android:textSize="18dp"
	               android:textStyle="bold"
	              android:textColor="#ffffff" />
		
		<Spinner
		    android:id="@+id/spnBinderList"
		    android:layout_width="94dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:layout_marginLeft="20dp" />

	</LinearLayout>
	

	
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:weightSum="5" >
		 <TextView
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_gravity="left"
	              android:layout_marginLeft="30dp"
	              android:layout_marginTop="8dp"
	              android:paddingLeft="52dp"
	              android:text="User    :"
	              android:textSize="18dp"
	              android:textStyle="bold"
	              android:textColor="#ffffff" />
		
		<TextView
		    android:id="@+id/txtVwUserId" 
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_gravity="right"
		    android:layout_marginLeft="24dp"		    
		    android:textSize="18dp"
	        android:textColor="#ffff66" />
	</LinearLayout>
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:weightSum="5" >
		 <TextView
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_gravity="left"
	              android:layout_marginLeft="26dp"
	              android:layout_marginTop="8dp"
	              android:paddingLeft="60dp"
	              android:text="IMEI   :"
	              android:textSize="18dp"
	              android:textStyle="bold"
	              android:textColor="#ffffff" />
		
		<TextView
		    android:id="@+id/txtVwImieNbr" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="24dp"		    
		    android:textSize="18dp"
	        android:textColor="#ffff66" />

	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="65dp"
	    android:background="@drawable/linearlayoutbackgroundboarder"
	    android:layout_marginBottom="10dp"
	    android:gravity="center" >

	    <Button
	        android:id="@+id/btnUpdate"
	        android:layout_width="100dp"
	        android:layout_margin="10dp"
	        style="@style/btnStyleBeige"
            android:layout_height="wrap_content"
	        android:text="Update"/>

	    <Button
	        android:id="@+id/btnCancel"
	        style="@style/btnStyleBeige"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
	        android:text="Cancel" />

	</LinearLayout>
	
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:weightSum="5" 
            android:visibility="invisible"
            >
		<TextView
	             android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_gravity="left"
	              android:layout_marginLeft="13dp"
	              android:layout_marginTop="8dp"
	              android:paddingLeft="5dp"
	              android:text="Active MRU   :"
	               android:textSize="18dp"
	               android:textStyle="bold"
	              android:textColor="#ffffff" />
		
		<TextView
		    android:id="@+id/txtVwActiveBinder" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:layout_marginLeft="24dp"		    
		    android:textSize="18dp"
	        android:textColor="#ffff66"  />
	</LinearLayout>
	
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:weightSum="5" 
            android:visibility="invisible"
            >
		<TextView
	             android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_gravity="left"
	              android:layout_marginLeft="28dp"
	              android:layout_marginTop="8dp"
	              android:paddingLeft="5dp"
	              android:text="Valid user?   :"
	              android:textSize="18dp"
	              android:textStyle="bold"
	              android:textColor="#ffffff" />
		
		<TextView
		    android:id="@+id/txtVwActiveUser" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:layout_marginLeft="24dp"		    
		    android:textSize="18dp"
	        android:textColor="#ffff66"  />
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="51dp"
	    android:scrollbars="vertical"
	    android:weightSum="5" 
	    android:visibility="invisible"
	    >

		<TextView
	             android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_gravity="left"
	              android:layout_marginLeft="26dp"
	              android:layout_marginTop="8dp"
	              android:paddingLeft="15dp"
	              android:text="Bill Month   :"
	              android:textSize="18dp"
	              android:textStyle="bold"
	              android:textColor="#ffffff" />
		
		<TextView
		    android:id="@+id/txtVwBillMth" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:layout_marginLeft="24dp"		    
		    android:textSize="18dp"
	        android:textColor="#ffff66"  />
	</LinearLayout>

</LinearLayout>
</ScrollView>