<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="fill_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@drawable/backgroundboarder"
	android:orientation="vertical">
    
    <LinearLayout  android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:paddingLeft="5dp"
        android:background="@drawable/headerboarder"
        android:text=""/>
		<com.google.android.material.appbar.AppBarLayout
			android:id="@+id/app_bar_dbtbillprint"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

			<androidx.appcompat.widget.Toolbar
				android:id="@+id/toolbar_dblctbillprint"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="?attr/colorPrimary"
				app:layout_scrollFlags="scroll|enterAlways"
				app:popupTheme="@style/AppTheme" />
		</com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>>
    
   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="left"
         android:layout_marginLeft="15dp"
         android:paddingLeft="37dp"
         android:text="Sub-Division    :"
         android:textColor="@android:color/white"
         android:textSize="18sp" />
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	   
	    android:paddingRight="50dp"
	    android:layout_marginLeft="50dp"
	    android:textColor="#FFFF66"
	    android:layout_gravity="center"
	    android:textSize="18sp"        
	    android:id="@+id/subDivisionTxt"/>
        </LinearLayout>    

	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="right"
       android:layout_marginLeft="15dp"
       android:text="Binder    :"
       android:paddingLeft="87dp"
       android:textSize="18sp"
       android:textColor="@android:color/white"
       />
	
	
<TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       
       android:layout_marginLeft="50dp"
       android:layout_gravity="center"
       android:textSize="18sp"
       android:paddingRight="50dp"
       android:textColor="#FFFF66"
       android:id="@+id/binderTxt"
       />
	</LinearLayout>
	
	
	 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp" >
 
    <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:textSize="18sp"
              
              android:textColor="@android:color/white"
              android:layout_marginLeft="15dp"
              android:paddingLeft="14dp"
              android:text="Account Number  :"/>

    <EditText
        android:id="@+id/AcctNbrEditDupl"
        style="@style/StyleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="35dp"
        android:ems="4"
        android:hint=" Acct"
        android:inputType="number"
        android:maxLength="12"
        android:textColor="#111111"
        android:textSize="18sp" />
    
        </LinearLayout>
	<Button
	    android:id="@+id/btnGenerateDupl"
	    style="@style/btnStyleBeige"
	    android:layout_width="185dp"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="75dp"
	    android:layout_marginTop="20dp"
	    android:text="Print Duplicate Bill" />
	
	<TextView 
	     android:id="@+id/nullBinderSubdivErrLbl"
	     android:layout_marginTop="2dp"
	     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:textColor="#FF0000"
         android:text=""
         android:textAppearance="?android:attr/textAppearanceMedium"/>	
</LinearLayout>