<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="fill_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@drawable/backgroundboarder"
	android:orientation="vertical">

	<LinearLayout  android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<com.google.android.material.appbar.AppBarLayout
			android:id="@+id/app_bar_billopt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

			<androidx.appcompat.widget.Toolbar
				android:id="@+id/toolbar_bill_bysequence"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="?attr/colorPrimary"
				app:layout_scrollFlags="scroll|enterAlways"
				app:popupTheme="@style/AppTheme" />
		</com.google.android.material.appbar.AppBarLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp" >

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:layout_marginLeft="15dp"
			android:paddingLeft="24dp"
			android:text="Sub-Division:"
			android:textStyle="bold"
			android:textColor="@android:color/white"
			android:textSize="18sp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:paddingRight="50dp"
			android:layout_marginLeft="48dp"

			android:layout_gravity="center"
			android:textSize="18sp"
			android:textColor="#FFFF66"
			android:id="@+id/subDivisionTxt"/>
	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:layout_marginLeft="15dp"
			android:text=" MRU:"
			android:textStyle="bold"
			android:paddingLeft="74dp"
			android:textSize="18sp"
			android:textColor="@android:color/white"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:layout_gravity="center"
			android:textSize="18sp"
			android:paddingRight="50dp"
			android:textColor="#FFFF66"
			android:id="@+id/binderTxt"
			/>
	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:layout_marginTop="7dp" >

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:textSize="18sp"

			android:textColor="@android:color/white"
			android:layout_marginLeft="15dp"
			android:paddingLeft="1dp"
			android:textStyle="bold"
			android:text="  Sequence No :"
			/>

		<TextView
			android:id="@+id/SeqNbrText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:layout_gravity="center"
			android:textSize="18sp"
			android:paddingRight="50dp"
			android:textColor="#FFFF66"
			/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:layout_marginTop="7dp" >

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:textSize="18sp"

			android:textColor="@android:color/white"
			android:layout_marginLeft="15dp"
			android:paddingLeft="14dp"
			android:textStyle="bold"
			android:text="  CA Number :"
			/>

		<TextView
			android:id="@+id/AcctNbrText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:layout_gravity="center"
			android:textSize="18sp"
			android:paddingRight="50dp"
			android:textColor="#FFFF66"
			/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp" >

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:layout_marginLeft="15dp"
			android:paddingLeft="37dp"
			android:text="      Name :"
			android:textStyle="bold"
			android:textColor="@android:color/white"
			android:textSize="18sp" />

		<TextView
			android:id="@+id/consumerNameTxt"
			android:layout_width="wrap_content"

			android:layout_height="wrap_content"
			android:layout_gravity="center"

			android:layout_marginLeft="18dp"
			android:maxLength="20"
			android:maxLines="1"
			android:textColor="#FFFF66"
			android:textSize="18sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal" >

		<Button
			android:id="@+id/btnPrevious"
			style="@style/btnStyleBeige"
			android:layout_width="134dp"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:text="Previous"
			android:visibility="gone" />

		<Button
			android:id="@+id/btnNext"
			style="@style/btnStyleBeige"
			android:layout_width="134dp"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:text="Next*" />
	</LinearLayout>

	<Button
		android:id="@+id/btnProceed"
		style="@style/btnStyleBeige"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="85dp"
		android:layout_marginTop="20dp"
		android:text="Proceed"
		android:textSize="22sp" />

	<TextView
		android:id="@+id/nullBinderSubdivErrLbl"
		android:layout_marginTop="2dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:textColor="#FF0000"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceMedium"/>

	<TextView
		android:id="@+id/textView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:text="*Without billing do not move to next consumer. It will not be available for further billing."

		android:textSize="18sp" />
</LinearLayout>