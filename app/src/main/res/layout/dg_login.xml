<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/headerboarder"
        android:orientation="vertical"
        android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/sbpscl_logo"
            app:civ_border_color="#2196F3"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:text="User Login "
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="gone" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtTxtUserName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:background="@android:color/white"
            android:focusable="true"
            android:hint="Meter Reader ID"
            android:inputType="text"
            android:maxLength="16"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="18dp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtTxtPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@android:color/white"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="12"
            android:padding="5dp"
            android:singleLine="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnLogin"
                style="@style/btnStyleSuccess"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".45"
                android:text="Login" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".1"></View>

            <Button
                android:id="@+id/btnCancel"
                style="@style/btnStyleCancle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".45"
                android:text="Cancel" />
        </LinearLayout>


        <TextView
            android:id="@+id/TxtVersion"
            style="@style/StyleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"
            android:text="@string/app_fileversion"
            android:visibility="gone" />


        <Button
            android:id="@+id/btnPrinterTest"
            style="@style/btnStyleBeige"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="Test Printer"
            android:visibility="gone" />


    </LinearLayout>


</RelativeLayout>
