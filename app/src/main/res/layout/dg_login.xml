<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:background="@drawable/headerboarder"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/sbpscl_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:layout_margin="5dp"
            android:text="User Login "
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:textSize="25dp" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtTxtUserName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:hint="Meter Reader ID"
            android:textStyle="bold"
            android:inputType="text"
            android:singleLine="true"
            android:focusable="true"
            android:maxLength="16"
            android:textSize="18dp" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtTxtPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="12"
            android:singleLine="true"
             />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".45"
                android:background="@color/colorAccent"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Login" />
            <View
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="50dp"></View>
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".45"
                android:background="@color/colorAccent"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Cancel" />
        </LinearLayout>


        <TextView
            android:id="@+id/TxtVersion"
            style="@style/StyleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"
            android:text="@string/app_fileversion"
            android:visibility="gone" />


        <Button
            android:id="@+id/btnPrinterTest"
            style="@style/btnStyleBeige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Test Printer"
            android:visibility="invisible" />


    </LinearLayout>


</RelativeLayout>
