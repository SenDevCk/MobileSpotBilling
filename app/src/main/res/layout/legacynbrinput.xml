<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
     android:background="@drawable/backgroundboarder"
    android:orientation="vertical" >
    
    <LinearLayout  android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView  android:id="@+id/tvConsnuminputTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:paddingLeft="5dp"
        android:background="@drawable/headerboarder"
        android:text="Bill By Legacy Number"/>
    </LinearLayout>>
    
   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="left"
         android:layout_marginLeft="15dp"
         android:paddingLeft="37dp"
         android:text="Sub-Division  :"
         android:textStyle="bold"
         android:textColor="@android:color/white"
         android:textSize="18sp" />
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	   
	    android:paddingRight="50dp"
	    android:layout_marginLeft="48dp"
	    
	    android:layout_gravity="center"
	    android:textSize="18sp"
        android:textColor="#FFFF66"
	    android:id="@+id/subDivisionTxt"/>
        </LinearLayout>    

	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="right"
       android:layout_marginLeft="15dp"
       android:text="MRU     :"
       android:textStyle="bold"
       android:paddingLeft="87dp"
       android:textSize="18sp"
       android:textColor="@android:color/white"
       />
	
<TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="50dp"
       android:layout_gravity="center"
       android:textSize="18sp"
       android:paddingRight="50dp"
       android:textColor="#FFFF66"
       android:id="@+id/binderTxt"
       />
	</LinearLayout>
	
	
	 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="7dp" >
 
    <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:textSize="18sp"
              
              android:textColor="@android:color/white"
              android:layout_marginLeft="15dp"
              android:paddingLeft="14dp"
              android:textStyle="bold"
              android:text="Legacy Number  :"
              />

    <EditText
        android:id="@+id/AcctNbrEdit"
        style="@style/StyleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="35dp"
        android:ems="4"
        android:hint=" Legacy No"
        android:inputType="text"
        android:maxLength="20"
        android:textSize="18sp" />
        </LinearLayout>
	 
	<Button 
	    android:id="@+id/btnGenerate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        style="@style/btnStyleBeige"
        android:text="Continue" />
	
	<TextView 
	     android:id="@+id/nullBinderSubdivErrLbl"
	     android:layout_marginTop="2dp"
	     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:textColor="#FF0000"
         android:text=""
         android:textAppearance="?android:attr/textAppearanceMedium"/>	
</LinearLayout>