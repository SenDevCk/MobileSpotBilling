<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:scrollbars="vertical"
            android:background="@drawable/backgroundboarder" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/headerboarder"
        android:paddingLeft="5dp"
        android:text="Help"
        android:textColor="#ffffff"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:text="Data Connection     :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:width="150dp" />

        <ImageView
            android:id="@+id/ivHelpIntConSts"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/backgroundboarder" />
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:text="Data Network :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:width="100dp" />

        <TextView
            android:id="@+id/tvHelpDataNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.12"
            android:hint="Data Network"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFF66" />
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:text="Server Connection :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:width="150dp" />

        <ImageView
            android:id="@+id/ivHelpSrvConSts"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/backgroundboarder" />
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:text="IMEI No     :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:width="100dp" />

        <TextView
            android:id="@+id/tvHelpImei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.12"
            android:hint="IMEI"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFF66" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="     App Version    :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:width="150dp" />

        <TextView
            android:id="@+id/tvHelpVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/app_fileversion"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFF66" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btnHelpRefresh"
            style="@style/btnStyleBeige"
            android:layout_width="134dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="Refresh" />

        <Button
            android:id="@+id/btnHelpOK"
            style="@style/btnStyleBeige"
            android:layout_width="134dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="OK" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
         >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Unposted Data    :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:width="150dp" />

        <TextView
            android:id="@+id/tvHelpUPDataCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:hint="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFF66"
            android:width="100dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="invisible"
         >

         <Button
            android:id="@+id/btnHelpSync"
            style="@style/btnStyleBeige"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Syncronize"
             />
        
        <Button
            android:id="@+id/btnHelpReprint"            
            style="@style/btnStyleBeige"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:text="Re-Print"
            android:layout_margin="10dp"
             />
    </LinearLayout>

    

</LinearLayout>
</ScrollView>
