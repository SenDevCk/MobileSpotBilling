<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="@drawable/backgroundboarder">
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   
                	
        	<TextView         
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp" 
             android:textSize="22dp"
             android:textColor="#ffffff"
            android:background="@drawable/headerboarder"      
            android:text="Search By:"/>
        	
			<Button
            android:id="@+id/btnMeterNbrSearch"
            android:layout_marginTop="10dp"
            style="@style/Widget.Button"
            android:text="Meter Number" 
            android:textSize="20dp"/>
        
    		<Button
            android:id="@+id/btnConsNameSearch"
           style="@style/Widget.Button"
            android:text="Consumer Name" 
            android:textSize="20dp"/>
            
            <Button
            android:id="@+id/btnOldAcctNbrSearch"
            style="@style/Widget.Button"
            android:text="Old Account Number" 
            android:textSize="20dp"/>
         
</LinearLayout>
</ScrollView>

