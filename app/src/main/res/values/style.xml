<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

 <style name="BackgroundStyle">
  <item name="android:background">#0f3e6d</item>
 </style>
 <style name="HeaderBackgroundStyle" parent="@android:style/TextAppearance.Large">
  <item name="android:layout_marginLeft">7dp</item>
  <item name="android:layout_marginRight">5dp</item>
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_gravity">center</item>
  <item name="android:layout_marginTop">0dp</item>
  <item name="android:textColor">#FFFFFF</item>
  <item name="android:textSize">22dp</item>
  <item name="android:textStyle">bold</item>
  </style>
  

  <style name="Widget.Button" parent="@android:style/Widget.Button">
  <item name="android:layout_gravity">center</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_marginTop">-5dp</item>
  
  <item name="android:layout_marginLeft">5dp</item>
  <item name="android:layout_marginRight">5dp</item>
  <item name="android:textSize">22dp</item>
  <item name="android:shadowDx">1</item>
  <item name="android:shadowDy">1</item>
  <item name="android:shadowRadius">2</item>
  <item name="android:shadowColor" >#000000</item>  
  </style> 
  <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
  
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_width">match_parent</item>
  </style>  
  <style name="AboutDialog" parent="@android:style/Theme.Dialog">
  <item name="android:textColor">#FFFFFF</item>
  <item name="android:background">#0f3e6d</item>
</style>
<style name="EditTextMSB" parent="android:style/Widget.EditText">
    <item name="android:background">@drawable/edittextbackground</item>
    <item name="android:textColor">#FFFF66</item>
     <item name="android:height">40dp</item>
</style>
<style name="MSBTheme" parent="@android:style/Theme.Black">
   <item name="android:editTextStyle">@style/EditTextMSB</item>
</style>

<style name="ATheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">#FF0099CC</item>
    <item name="colorPrimaryDark">#FF0099CC</item>
    <item name="colorAccent">#FFFFFF</item>
</style>

<style name="btnStyleBeige" parent="@android:style/Widget.Button">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@color/colorPrimaryDark</item>
	</style>

    <style name="btnStyleSuccess" parent="@android:style/Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/holo_green_dark</item>
    </style>

    <style name="btnStyleCancle" parent="@android:style/Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>

	<style name="StyleEditText" parent="@android:style/Widget.EditText">
	    <item name="android:textColor">@android:color/black</item>
		<item name="android:background">@drawable/msbtheme_edittext</item>
		<item name="android:padding">10dip</item>
	</style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/custom_theme_color</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/custom_theme_color</item>
        <item name="colorControlNormal">@color/custom_theme_color</item>
        <item name="colorControlActivated">@color/custom_theme_color</item>
    </style>

</resources>
