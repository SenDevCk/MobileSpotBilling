<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- focused --> 
    <item android:state_focused="true" android:drawable="@android:color/darker_gray" /> 
    <!-- focused and pressed--> 
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@android:color/darker_gray" /> 
    <!-- pressed --> 
    <item android:state_pressed="true" android:drawable="@android:color/darker_gray" /> 
    <!-- selected -->
    <item android:drawable="@android:color/darker_gray" android:state_selected="true"/>
    <!-- default --> 
    <item android:drawable="@android:color/darker_gray" />  

</selector>